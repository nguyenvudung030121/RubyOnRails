<div class="container">
    <div class="title-school" style="width: 410px;">
    <p class="lead"
        style="text-align: center ; font-weight: bold; font-family: 'Times New Roman', Times, serif; color: rgb(50, 205, 68);">
        ĐẠI HỌC ĐÀ NÃNG</p>
    <p class="lead"
        style="margin-top: -20px;text-align: center ; font-weight: bold; font-family: 'Times New Roman', Times, serif; color: rgb(50, 205, 68);">
        TRƯỜNG ĐẠI HỌC SƯ PHẠM KỸ THUẬT
    </p>
    </div>
    <p
        style="text-align: center; font-weight: bold; font-family: 'Times New Roman', Times, serif; font-size: 30px; color: red;">
        <%= image_tag "open-book.png" %> QUẢN LÝ SINH VIÊN
    </p>
</div>
<table class="table table-striped" style="width: 110%">
  <thead>
    <tr>
      <th scope="col-md-auto">STT</th>
      <th scope="col-md-auto">Mã HS</th>
      <th scope="col-md-auto">Họ và tên</th>
      <th scope="col-md-auto">Lớp</th>
      <th scope="col-md-auto">Địa chỉ</th>
      <th scope="col-md-auto">Ngày sinh</th>
      <th scope="col-md-auto"></th>
    </tr>
  </thead>
  <tbody>
    <div id="ql_tvs">
      <% i=0 %>
      <% @ql_tvs.each do |ql_tv| i=i+1 %> 
      <tr>
      <td><%= i %></td>
      <%= render ql_tv %>
      </tr>
      <!-- <p><%= link_to "Show this ql tv", ql_tv %></p> -->
      <% end %>
    </div>
  </tbody>
</table>

<%= link_to "Tạo mới sinh viên" , new_ql_tv_path, class:"btn btn-primary" %>
